{
"tasks": [
    {
        "type": "cppbuild",
        "label": "C/C++: clang++ build active file",
        "command": "/usr/bin/clang++",
        "args": [
            "-std=c++17",
            "-stdlib=libc++",
            "-fdiagnostics-color=always",
            "-g",
            "-Wall",
            "${fileDirname}/*.cpp",
            "-o",
            "${workspaceFolder}/target/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "detail": "调试器生成的任务。"
    }
],
"version": "2.0.0"
}